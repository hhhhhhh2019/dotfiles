#!/usr/bin/bash


hibernate='Ô£•'
shutdown='‚èª'
reboot='Û∞úâ'
lock='Óô≤'
suspend='Û∞í≤'
logout='Û∞çÉ'
yes='Óòø'
no='êÑÇ'


rofi_cmd() {
	rofi \
		-dmenu \
		-kb-cancel 'Escape' \
		-theme "$HOME"/dotfiles/.config/rofi/config/powermenu.rasi
}


rofi_confirm() {
	rofi \
		-dmenu \
		-kb-cancel 'Escape' \
		-theme "$HOME"/dotfiles/.config/rofi/config/confirm.rasi \
		-mesg "Are you Sure?"
}


result=$(echo -e "$lock\n$suspend\n$logout\n$hibernate\n$reboot\n$shutdown" | rofi_cmd)

if [ -z $result ]; then
	exit
fi

check=$(echo -e "$yes\n$no" | rofi_confirm)

if [ -z $check ] || [ $check = $no ]; then
	exit
fi

case ${result} in
	$shutdown)
		systemctl poweroff
	;;

	$reboot)
		systemctl reboot
	;;

	$logout)
		loginctl terminate-user $USER
	;;

	$suspend)
		systemctl suspend
	;;
esac
